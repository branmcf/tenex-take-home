##################################################
# REQUIRED - Core Configuration
##################################################

# Database connection (PostgreSQL)
# For Docker: postgres://postgres:postgrespassword@postgres:5432/app
# For Local: postgres://postgres:postgrespassword@localhost:5433/app
DATABASE_URL="postgres://postgres:postgrespassword@localhost:5433/app"

# Authentication secret (minimum 32 characters)
AUTH_SECRET="your-super-secret-key-minimum-32-characters-long"

# API URL (where this backend runs)
API_URL="http://localhost:3026"

# MCP Tools Server URL
MCP_TOOLS_URL="http://localhost:4010"

##################################################
# REQUIRED - LLM Providers (at least ONE required)
##################################################

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-..."

# Anthropic (https://console.anthropic.com/settings/keys)
ANTHROPIC_API_KEY="sk-ant-..."

# Google AI (https://aistudio.google.com/app/apikey)
GOOGLE_GENERATIVE_AI_API_KEY="AIza..."

##################################################
# OPTIONAL - OAuth (for Google Sign-In)
##################################################

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

##################################################
# OPTIONAL - Email Verification
##################################################

# Resend (https://resend.com/api-keys)
RESEND_API_KEY=""

##################################################
# OPTIONAL - Web Search (Exa)
##################################################

# Exa API (https://dashboard.exa.ai/api-keys)
EXA_API_KEY=""

##################################################
# OPTIONAL - Observability (Langfuse)
##################################################

# Langfuse (https://cloud.langfuse.com)
LANGFUSE_SECRET_KEY=""
LANGFUSE_PUBLIC_KEY=""
LANGFUSE_BASE_URL="https://us.cloud.langfuse.com"

##################################################
# OPTIONAL - Advanced Configuration
##################################################

# Environment mode
ENVIRONMENT="local"

# Logging (use "*" for all, or comma-separated module names)
LOG_LEVELS="*"

# Frontend URL (for CORS)
APP_URL="http://localhost:3000"

# Better Auth URL (usually same as API_URL)
BETTER_AUTH_URL="http://localhost:3026"

# PostGraphile URL (internal GraphQL)
POSTGRAPHILE_API_URL="http://0.0.0.0:5555/graphql"

# MCP Tools API Key (must match mcp-tools-server/.env)
MCP_TOOLS_API_KEY="local_mcp_tools_key"

# Redis (for rate limiting - optional for local dev)
# REDIS_URL=""

# Disable WebSocket Redis adapter for local dev
DISABLE_WEB_SOCKETS_REDIS_ADAPTER="1"
DISABLE_REDIS_CLIENT_TLS="1"
