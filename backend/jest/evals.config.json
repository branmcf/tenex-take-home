{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "../",
    "testPathIgnorePatterns": [
        "<rootDir>/dist",
        "<rootDir>/node_modules"
    ],
    "testMatch": [
        "<rootDir>/evals/**/*.eval.ts"
    ],
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "diagnostics": false
            }
        ]
    },
    "testTimeout": 30000,
    "maxWorkers": 4,
    "watchman": false,
    "silent": false,
    "clearMocks": true,
    "setupFiles": ["dotenv/config"],
    "reporters": [
        "default",
        "langsmith/jest/reporter"
    ]
}
