# Terraform Variables Example (Staging)
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!

###############################################################################
# Environment Configuration
###############################################################################

environment  = "staging"
project_name = "hardwire"
aws_region   = "us-east-2"

###############################################################################
# Database Configuration (smaller for staging)
###############################################################################

db_instance_class        = "db.t3.micro"
db_allocated_storage     = 20
db_max_allocated_storage = 50
db_name                  = "app"
db_username              = "hardwire_admin"
db_password              = "YOUR_STAGING_DATABASE_PASSWORD"

###############################################################################
# Redis Configuration
###############################################################################

redis_node_type       = "cache.t3.micro"
redis_num_cache_nodes = 1

###############################################################################
# App Runner Configuration
###############################################################################

github_connection_arn = "arn:aws:apprunner:us-east-2:YOUR_ACCOUNT_ID:connection/YOUR_CONNECTION_NAME/YOUR_CONNECTION_ID"

github_org            = "branmcf"
github_repo_backend   = "hardwire-take-home"
github_repo_frontend  = "hardwire-take-home"
github_repo_mcp_tools = "hardwire-take-home"

# Staging uses develop branch by default
backend_branch   = "develop"
frontend_branch  = "develop"
mcp_tools_branch = "develop"

# Smaller instances for staging
backend_cpu      = "512"
backend_memory   = "1024"
frontend_cpu     = "512"
frontend_memory  = "1024"
mcp_tools_cpu    = "256"
mcp_tools_memory = "512"

###############################################################################
# Marketing Site Configuration
###############################################################################

marketing_domain          = ""
marketing_certificate_arn = ""

###############################################################################
# Documentation Site Configuration
###############################################################################

docs_domain          = ""
docs_certificate_arn = ""

###############################################################################
# Secrets Configuration
###############################################################################

better_auth_secret = "YOUR_STAGING_BETTER_AUTH_SECRET"
mcp_tools_api_key  = "YOUR_STAGING_MCP_TOOLS_API_KEY"

# Optional API keys
openai_api_key     = ""
anthropic_api_key  = ""
resend_api_key     = ""
stripe_secret_key  = ""
