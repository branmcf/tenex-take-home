{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "target": "ES2018",
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "moduleResolution": "bundler",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./app/",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "ts-node": {
        "files": true
    },
    "exclude": [
        ".node_modules",
        "tests"
    ]
}
