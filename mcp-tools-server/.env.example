# MCP Tools Server Environment Variables
# Copy this file to .env

# Server port (default: 4010)
PORT="4010"

# API key for authentication (must match backend's MCP_TOOLS_API_KEY)
MCP_TOOLS_API_KEY="local_mcp_tools_key"

# Environment mode (optional)
ENVIRONMENT="local"

# HTTP request allowlist for security (optional, comma-separated hostnames)
# MCP_HTTP_REQUEST_ALLOWLIST="api.example.com,data.example.org"
